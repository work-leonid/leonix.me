<picture class="space-y-10 ">
  <source srcset="<%= relative_url "/images/#{@project}/#{@name}@2x.webp" %> 2x" type="image/webp">
  <% if @cover %>
  <img src="<%= relative_url "/images/#{@project}/#{@name}.jpg" %>" 
       srcset="<%= relative_url "/images/#{@project}/#{@name}@2x.jpg" %> 2x" 
       alt="#{@project.capitalize()}" 
       class="w-full hover:scale-110 transition-all easing-in-out duration-300" />
     <% else %>
  <img src="<%= relative_url "/images/#{@project}/#{@name}.jpg" %>" 
       srcset="<%= relative_url "/images/#{@project}/#{@name}@2x.jpg" %> 2x" 
       alt="#{@project.capitalize()}" 
       class="img w-full" />
     <% end %>
</picture>
