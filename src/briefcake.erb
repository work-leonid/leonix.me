  </div>
  <div class="section-img bg-gradient-to-br from-slate-800 via-sky-800 to-fuchsia-900 ">
    <%= render Shared::Image.new(name: "app-index", project: "briefcake") %>
    <%= render Shared::Image.new(name: "app-second", project: "briefcake") %>
    <%= render Shared::Image.new(name: "app-add-feed", project: "briefcake") %>
  </div>
</section>

